# PRONOVA PROJECT ENVIRONMENT VARIABLES
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to git!

# ========================================
# WALLET CONFIGURATION
# ========================================

# Deployer wallet private key (WITHOUT 0x prefix)
# This wallet will deploy contracts and pay gas fees
DEPLOYER_PRIVATE_KEY=your_private_key_here_without_0x

# Treasury wallet address (Multi-sig recommended)
# This wallet will receive presale funds
TREASURY_ADDRESS=0x_your_treasury_wallet_address

# Team wallet address (Multi-sig recommended)
# This wallet will receive 15% team allocation
TEAM_WALLET_ADDRESS=0x_your_team_wallet_address

# Liquidity wallet address
# This wallet will receive 20% liquidity allocation
LIQUIDITY_WALLET_ADDRESS=0x_your_liquidity_wallet_address

# Marketing wallet address
# This wallet will receive 10% marketing allocation
MARKETING_WALLET_ADDRESS=0x_your_marketing_wallet_address

# ========================================
# API KEYS
# ========================================

# BscScan API Key (get from https://bscscan.com/myapikey)
BSCSCAN_API_KEY=your_bscscan_api_key_here

# Etherscan API Key (if deploying to Ethereum)
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# ========================================
# BLOCKCHAIN CONFIGURATION
# ========================================

# BSC Mainnet USDT Contract Address
USDT_BSC_MAINNET=0x55d398326f99059fF775485246999027B3197955

# Chainlink Price Feed Addresses (BSC Mainnet)
ETH_USD_FEED_MAINNET=0x9ef1B8c0E4F7dc8bF5719Ea496883DC6401d5b2e
BNB_USD_FEED_MAINNET=0x0567F2323251f0Aab15c8dFb1967E4e8A7D42aeE

# ========================================
# RPC ENDPOINTS (Optional - using defaults)
# ========================================

# BSC Mainnet RPC
BSC_MAINNET_RPC=https://bsc-dataseed.binance.org/

# BSC Testnet RPC
BSC_TESTNET_RPC=https://data-seed-prebsc-1-s1.binance.org:8545

# Ethereum RPC (if needed)
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your_infura_key

# Sepolia RPC (if needed)
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/your_infura_key

# ========================================
# DEPLOYMENT CONFIGURATION
# ========================================

# Default network for frontend
DEFAULT_NETWORK=bscMainnet

# Enable testnet mode
ENABLE_TESTNET=true

# Presale configuration
PRESALE_START_TIME=1703980800
PRESALE_END_TIME=1711756800